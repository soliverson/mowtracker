
    <h2>Jobs for <%= customerName %></h2>
    <% if (jobs.length === 0) { %>
      <p>No jobs found for this customer.</p>
    <% } else { %>
      <table>
        <tr>
          <th>Date</th>
          <th>Amount Paid</th>
          <th>Phone</th>
          <th>Notes</th>
          <th>Address</th>
        </tr>
        <% jobs.forEach(job => { %>
          <tr>
            <td><%= job.date %></td>
            <td>$<%= parseFloat(job.amount_paid).toFixed(2) %></td>
            <td><%= job.phone || '' %></td>
            <td><%= job.notes || '' %></td>
            <td><%= job.address || '' %></td>
          </tr>
        <% }) %>
      </table>
    <% } %>
      