<!DOCTYPE html>
<html>
<head>
  <title>Edit Job</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h2>Edit Job</h2>
  <form method="POST" action="/job/edit/<%= job.id %>">
    <input name="customer_name" value="<%= job.customer_name %>" required>
    <input type="date" name="date" value="<%= job.date.toISOString().slice(0,10) %>" required>
    <input name="amount_paid" type="number" step="0.01" value="<%= job.amount_paid %>" required>
    <input name="phone" value="<%= job.phone %>">
    <input name="address" value="<%= job.address %>">
    <textarea name="notes"><%= job.notes %></textarea>
    <button type="submit">Update Job</button>
  </form>
</body>
</html>
