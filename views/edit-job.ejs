<!DOCTYPE html>
<html>
<head>
  <title>Edit Job</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header>
    <img src="/logo.png" alt="Hunter Mowing Co. Logo">
  </header>
<nav class="navbar" id="navbar">
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/customers">Customers</a></li>
      <li><a href="/calendar">Calendar</a></li>
      <li><a href="/payments">Payments</a></li>
      <li><a href="/reports">Reports</a></li>
      <li><a href="/logout">Logout</a></li>
    </ul>
  </nav>
  <main>
    <h2>Edit Job</h2>
    <form method="POST" action="/jobs/<%= job.id %>/update">
      <label>Customer:</label>
      <select name="customer_name" required>
        <% customers.forEach(c => { %>
          <option value="<%= c.name %>" <%= job.customer_name === c.name ? 'selected' : '' %>><%= c.name %></option>
        <% }) %>
      </select><br>

      <label>Date:</label>
      <input type="date" name="date" value="<%= job.date %>" required><br>

      <label>Time:</label>
      <input type="time" name="time" value="<%= job.time %>"><br>

      <label>Amount Paid:</label>
      <input type="number" step="0.01" name="amount_paid" value="<%= job.amount_paid %>"><br>

      <label>Phone:</label>
      <input type="text" name="phone" value="<%= job.phone || '' %>"><br>

      <label>Address:</label>
      <input type="text" name="address" value="<%= job.address || '' %>"><br>

      <label>Notes:</label><br>
      <textarea name="notes" rows="4" cols="40"><%= job.notes || '' %></textarea><br>

      <button type="submit">Save Changes</button>
    </form>
  </main>
</body>
</html>
