<h2>Edit Expense</h2>

<form action="/expenses/<%= expense.id %>/update" method="POST">
  <label>Category:</label>
  <select name="category" required>
    <% ['Fuel', 'Equipment', 'Repairs', 'Supplies', 'Marketing', 'Other'].forEach(c => { %>
      <option value="<%= c %>" <%= expense.category === c ? 'selected' : '' %>><%= c %></option>
    <% }) %>
  </select><br>

  <label>Description:</label>
  <input type="text" name="description" value="<%= expense.description %>" required><br>

  <label>Amount ($):</label>
  <input type="number" name="amount" step="0.01" value="<%= parseFloat(expense.amount).toFixed(2) %>" required><br>

  <label>Date:</label>
  <input type="date" name="date" value="<%= new Date(expense.date).toISOString().split('T')[0] %>" required><br>

  <button type="submit">Save Changes</button>
</form>
