<!DOCTYPE html>
<html>
<head>
  <title>Add Appointment</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header>
    <img src="/logo.png" alt="Hunter Mowing Co. Logo">
  </header>

 <nav class="navbar" id="navbar">
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/customers">Customers</a></li>
      <li><a href="/calendar">Calendar</a></li>
      <li><a href="/payments">Payments</a></li>
      <li><a href="/reports">Reports</a></li>
      <li><a href="/logout">Logout</a></li>
    </ul>
  </nav>
  
  <main>
    <h2>Schedule Appointment</h2>
    <form action="/add-appointment" method="POST">
      <label for="customer_name">Customer:</label>
      <select name="customer_name" required>
  <% customers.forEach(c => { %>
    <option value="<%= c.name %>" <%= (c.name === selectedCustomer ? 'selected' : '') %>>
      <%= c.name %>
    </option>
  <% }) %>
</select>


      <label for="date">Date:</label>
      <input type="date" name="date" required><br>

      <label for="time">Time:</label>
      <input type="time" name="time"><br>

      <label for="amount_paid">Amount Paid ($):</label>
      <input type="number" name="amount_paid" step="0.01"><br>

      <label for="phone">Phone (optional):</label>
      <input type="text" name="phone"><br>

      <label for="address">Address (optional):</label>
      <input type="text" name="address"><br>

      <label for="notes">Notes:</label><br>
      <textarea name="notes" rows="4" cols="40"></textarea><br>

      <button type="submit">Add Appointment</button>
    </form>
  </main>
  <div class="mobile-nav">
  <a href="/">🏠</a>
  <a href="/calendar">📅</a>
  <a href="/add-appointment">➕</a>
  <a href="/payments">💵</a>
  <a href="/logout">🚪</a>
</div>

</body>
</html>
